<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->

    <item
        android:id="@+id/background">

        <shape
            android:shape="rectangle">

            <corners
                android:topRightRadius="@dimen/input_view_background_drawable_corners_radius"
                android:bottomRightRadius="@dimen/input_view_background_drawable_corners_radius"/>

            <solid android:color="@color/colorInputViewNormalBackground"/>

        </shape>

    </item>

    <!-- Foreground -->

    <item
        android:id="@+id/foreground">

        <ripple android:color="?attr/colorControlHighlight">

            <item android:id="@android:id/mask">

                <shape android:shape="rectangle">

                    <corners
                        android:topRightRadius="@dimen/input_view_background_drawable_corners_radius"
                        android:bottomRightRadius="@dimen/input_view_background_drawable_corners_radius"/>

                    <solid
                        android:color="@color/white"/>

                </shape>

            </item>

        </ripple>

    </item>

</layer-list>