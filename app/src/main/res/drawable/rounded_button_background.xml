<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <item
        android:id="@+id/background">

        <shape
            android:shape="rectangle">

            <corners
                tools:topLeftRadius="@dimen/rounded_button_corner_radius"
                tools:topRightRadius="@dimen/rounded_button_corner_radius"
                tools:bottomLeftRadius="@dimen/rounded_button_corner_radius"
                tools:bottomRightRadius="@dimen/rounded_button_corner_radius"/>

            <solid
                android:color="@color/deepTealPrimaryDarkColor"/>

        </shape>

    </item>

    <item
        android:id="@+id/foreground">

        <ripple
            android:color="?attr/colorControlHighlight">

            <item android:id="@android:id/mask">

                <shape android:shape="rectangle">

                    <solid android:color="@color/white"/>

                    <corners
                        tools:topLeftRadius="@dimen/rounded_button_corner_radius"
                        tools:topRightRadius="@dimen/rounded_button_corner_radius"
                        tools:bottomLeftRadius="@dimen/rounded_button_corner_radius"
                        tools:bottomRightRadius="@dimen/rounded_button_corner_radius"/>

                </shape>

            </item>

        </ripple>

    </item>

</layer-list>