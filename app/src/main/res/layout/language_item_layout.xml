<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentContainerRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/deepTealPrimaryColor">

    <ImageView
        android:id="@+id/iconIv"
        android:layout_width="@dimen/language_item_flag_width"
        android:layout_height="@dimen/language_item_flag_height"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/language_item_text_horizontal_margin"
        android:layout_marginTop="@dimen/language_item_margin"
        android:layout_marginBottom="@dimen/language_item_margin"
        android:scaleType="centerInside"
        tools:src="@drawable/ic_flag_ukrainian" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/language_item_margin"
        android:layout_toEndOf="@+id/iconIv"
        android:textSize="@dimen/language_item_title_text_size"
        android:textStyle="bold"
        tools:text="@string/language_name_ukrainian"
        tools:textColor="@color/deepTealPrimaryTextColor" />

</RelativeLayout>