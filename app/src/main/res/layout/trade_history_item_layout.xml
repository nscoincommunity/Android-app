<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRevealLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    app:dragEdge="right"
    app:mode="same_level">

    <LinearLayout
        android:id="@+id/cancelBtnContainerLl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/trade_history_item_vertical_padding"
        android:paddingBottom="@dimen/trade_history_item_vertical_padding"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/cancellationPb"
            android:layout_width="@dimen/trade_history_item_progress_bar_size"
            android:layout_height="@dimen/trade_history_item_progress_bar_size"
            android:layout_marginStart="@dimen/trade_history_item_progress_bar_margin_start"
            android:layout_marginEnd="@dimen/trade_history_item_progress_bar_margin_end"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/cancelBtnTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/trade_history_item_text_size"
            tools:text="@string/action_cancel"
            tools:textColor="@color/white"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainLayoutFl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/trade_history_item_vertical_padding"
        android:paddingBottom="@dimen/trade_history_item_vertical_padding">

        <TextView
            android:id="@+id/amountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/trade_history_item_horizontal_margin"
            android:layout_gravity="start"
            android:textSize="@dimen/trade_history_item_text_size"
            tools:text="0.0284294"
            tools:textColor="@color/white"/>

        <TextView
            android:id="@+id/priceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/trade_history_item_text_size"
            tools:text="0.00000028"
            tools:textColor="@color/colorGreenAccent"/>

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/trade_history_item_horizontal_margin"
            android:layout_gravity="end"
            android:textSize="@dimen/trade_history_item_text_size"
            tools:text="07:00:56 PM"
            tools:textColor="@color/white"/>

    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>