<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/orderbook_header_item_view_widget_top_padding"
        android:paddingBottom="@dimen/orderbook_header_item_view_widget_bottom_padding"
        android:textSize="@dimen/orderbook_header_item_title_text_size"
        android:textStyle="bold"
        tools:text="@string/action_bid"
        tools:textColor="@color/deepTealSecondaryTextColor"/>

    <ImageView
        android:id="@+id/moreBtnIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/orderbook_header_item_view_widget_top_padding"
        android:paddingBottom="@dimen/orderbook_header_item_view_widget_bottom_padding"
        android:paddingEnd="@dimen/orderbook_header_item_more_button_side_padding"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_plus"
        tools:tint="@color/deepTealSecondaryTextColor"/>

    <View
        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/orderbook_header_item_separator_view_height"
        android:layout_below="@id/titleTv"
        android:layout_marginBottom="@dimen/orderbook_header_item_separator_view_bottom_margin"
        android:alpha="0.5"
        tools:background="@color/deepTealSecondaryTextColor"/>

</RelativeLayout>